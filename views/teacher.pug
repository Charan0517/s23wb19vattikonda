extends layout

block content
    h1= title
    -
     let results = [{"Teacher_Name": "Jhon", "Teacher_Salary": "20,000", "Subject": "Java",}, { "Teacher_Name": "Wick", "Teacher_Salary": "26,000", "Subject": "Python",}, {"Teacher_Name": "Smith", "Teacher_Salary": "15,000", "Subject": "Compile",},]
    div(class= "container-fluid")
        div(class = "row")  
            each item, index in results
                div(class= "col-sm-2", onclick=`teaches(${index})`) Name: &nbsp; #{item.Teacher_Name}
                div(class= "col-sm-2", onclick=`teaches(${index})`) Salary: &nbsp; #{item.Teacher_Salary}
                div(class= "col-sm-2", onclick=`teaches(${index})`) Subject:  &nbsp; #{item.Subject}

    script.
        function teaches (itemNum){
        alert(`You like teacher ${itemNum+1}`)
        }